{{!-- User/Volunteer Profile Page --}}
<div class="container">
    <div class="row">
        <div class="col-lg-10 col-xl-9 mx-auto">
            <div class="card card-signin flex-row my-5">
                <div class="card-img-left d-none d-md-flex">
                </div>
                <div class="card-body">
                    {{!-- <form class="form-signin"> --}}
                    <div class="row">
                        <div class="col">
                            <img src="https://mdbootstrap.com/img/Others/documentation/img%20(75)-mini.jpg"
                                alt="thumbnail" class="img-thumbnail z-depth-3 rounded-circle float-left"
                                style="width: 200px">
                            <form id="uploadForm" enctype="multipart/form-data" action="/api/photo" method="post">
                                <input type="file" name="userPhoto" />
                                <input type="submit" value="Upload Image" name="submit">
                            </form>
                            {{!-- profile photo  --}}
                            
                        </div>
                        <div class="col">
                            {{!-- Name and contact info (email & phone number) of volunteer  --}}
                            <div class="card border-info mb-3" style="max-width: 20rem;">
                                <div class="card-header">
                                    {{!-- want to pull in data from users table --}}
                                    <p>Volunteer</p>
                                </div>
                                <div class="card-body text-info">
                                    <h5 class="card-title">Contact Info</h5>
                                    <p class="card-text">email@email.com</p>
                                    <p class="card-text">555-555-5555</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="card">
                                <div class="card-body text-align-left">
                                    <h3>My Organizations</h3>
                                    <ul>
                                        <li class="dropdown">
                                            <select value="">
                                                {{#each data}}
                                                <option name="" id="">{{org}}</option>
                                                {{/each}}
                                            </select>
                                        </li>
                                    </ul>

                                </div>
                                <h4>My Hours</h4>
                            </div>
                        </div>

                    </div>
                    {{!-- </form> --}}
                </div>
            </div>

            <div class="row">
                <div class="col">

                    <!--Table shows volunteer organizations and hours worked-->
                    <table id="tablePreview" class="table table-hover table-borderless z-depth-2">
                        <!--Table head-->
                        <thead>
                            <tr>
                                <th>Volunteer Organizations</th>
                                <th>Hours</th>
                            </tr>
                        </thead>
                        <!--Table head-->
                        <!--Table body-->
                        <tbody>
                            {{#each data}}

                            <tr>
                                <td>{{org}}</td>
                                <td>{{hours}}</td>
                            </tr>

                            {{/each}}


                        </tbody>
                        <!--Table body-->
                    </table>
                    <!--Table-->
                </div>
                {{!-- Modal: modalChart  --}}
            </div>

            </form>
        </div>
    </div>
</div>
</div>
</div>