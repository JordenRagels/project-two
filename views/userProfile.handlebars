{{!-- User/Volunteer Profile Page --}}
<div class="container">
    <div class="row">
        <div class="col-lg-10 col-xl-9 mx-auto">
            <div class="card card-signin flex-row my-5">
                <div class="card-img-left d-none d-md-flex">
                </div>
                <div class="card-body">
                    <form class="form-signin">
                        <div class="row">
                            <div class="col">
                                {{!-- profile photo  --}}
                                <img src="https://mdbootstrap.com/img/Others/documentation/img%20(75)-mini.jpg"
                                    alt="thumbnail" class="img-thumbnail z-depth-3 rounded-circle float-left"
                                    style="width: 200px">
                                    {{!-- profile photo  --}}
                            </div>
                            <div class="col">
                                {{!-- Name and contact info (email & phone number) of volunteer  --}}
                                <div class="card border-info mb-3" style="max-width: 20rem;">
                                    {{!-- need to make name link to show name displayed from create account page --}}
                                    <div class="card-header">John Doe</div>
                                    <div class="card-body text-info">
                                        <div class="text-center">
                                            {{!-- need to link button to display contact
                                            info from users create account page --}}
                                            <a href="" class="btn btn-default btn-rounded mb-4" data-toggle="modal"
                                                data-target="#modalContactForm">Contact Info</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="card">
                                    <div class="card-body text-center">
                                        {{!-- need to have total hours show in stead of 00:00 --}}
                                        Total Hours: 00:00
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col">
                                {{!-- Table shows volunteer organizations and hours worked --}}
                                <table id="tablePreview" class="table table-hover table-borderless z-depth-2">
                                    {{!-- Table head --}}
                                    <thead>
                                        <tr>
                                            <th>Volunteer Organizations</th>
                                            <th>Hours</th>
                                        </tr>
                                    </thead>
                                    {{!-- Table head --}}
                                    {{!-- Table body --}}
                                    <tbody>
                                        {{!-- need to have table data show info based on what's been entered
                                        from create account page --}}
                                         {{#each data}}

                                        <tr>
                                            <td>{{org}}</td>
                                            <td>{{hours}}</td>
                                        </tr>
                                        
                                        {{/each}}
                                    </tbody>
                                    {{!-- Table body --}}
                                </table>
                                {{!-- Table --}}

                                {{!-- Button to add another volunteer organization --}}
                                <div class="row">
                                    <div class="col">
                                        <input class="btn btn-primary" type="button" value="Add Organization">
                                    </div>
                                </div>
                                {{!-- Button to add another volunteer organization --}}

                            </div>
                            {{!-- Modal shows the Contact Info (email and phone number) for volunteer  --}}
                            <div class="modal fade z-depth-2" id="modalContactForm" tabindex="-1" role="dialog"
                                aria-labelledby="myModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header text-center">
                                            <h4 class="modal-title w-100 font-weight-bold">John Doe</h4>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="md-form mb-5">
                                            <i class="fas fa-envelope prefix grey-text"></i>
                                            <input type="email" id="form29" class="form-control validate">
                                            <label data-error="wrong" data-success="right" for="form29">Your
                                                email</label>
                                        </div>

                                        <div class="md-form mb-5">
                                            <i class="fas fa-tag prefix grey-text"></i>
                                            <input type="tel" id="form32" class="form-control validate">
                                            <label data-error="wrong" data-success="right" for="form32">Phone
                                                number</label>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
